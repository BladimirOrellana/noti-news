<title>Scrape-News | SCRAPING DATA</title>
  <head>
    <div class="jumbotron text-center header header-index">
  <h1 class="display-4">WELCOME TO SCRAPE-NEWS</h1>
   <hr class="my-4">
  <a data-value="food"  class="btn btn-primary btn-lg"  id="search" role="button">Search</a>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8" id="large-media-card">
      <div class="container-fluid">
        {{#each data}}
           <div class="media">
  <img src="{{photo}}" width="70" height="70" class="mr-3" alt="...">
  <div class="media-body">
    <h5 class="mt-0">{{title}}</h5>
    <a href="{{link}}" class="btn btn-success">Read more</a>
    <a class="btn btn-warning save-post" data-id="{{_id}}">Save for later</a>
 </div>
</div>

  

        {{/each}}
  </div>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4" id="small-media-card">
      <div class="container">
        <div class="h2 saved-posts-container">Saved Posts</div>
      </div>
      <div class="side-bar">

      </div>
    </div>
  </div>
</div>
{{!-- DELETING MESSAGE MODAL --}}
 <div class="modal fade deleted scraping" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
     <div class="modal-body deleted-message">
       Deleting...
      </div>
    </div>
  </div>
</div>


{{!-- COMMENT MODAL --}}
  <div class="modal fade comment-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      
             <div class="alert alert-danger comment-alert" role="alert">
 Please Write a comment
</div>
   <div class="modal-body deleted-message">
       <form>
  <div class="form-group">
     <input type="text" class="form-control" id="comment-title" aria-describedby="emailHelp" placeholder="Title">
  </div>
    <div class="form-group">
     <textarea class="form-control" id="comment-body" rows="3" placeholder="Write..."></textarea>
  </div>
 <button type="submit"  class="btn btn-primary btn-block save-comment">Save</button>
</form>
      </div>
      <div class="card">
  <div class="card-body comments-body">
  
  </div>
  
</div>
    </div>
  </div>
</div>
  
  

